/**
 * Función para guardar todas las UDF en la base de datos
 * Ejecutar esta función para almacenar las funciones en db.system.js
 */
function instalarFuncionesUDF() {
  const funciones = [
    { nombre: "calcularInventarioMedicamentos", codigo: calcularInventarioMedicamentos },
    { nombre: "generarAlertaStockCritico", codigo: generarAlertaStockCritico },
    { nombre: "calcularRotacionMedicamentos", codigo: calcularRotacionMedicamentos },
    { nombre: "reporteMedicamentosPorFabricante", codigo: reporteMedicamentosPorFabricante },
    { nombre: "calcularNecesidadesReabastecimiento", codigo: calcularNecesidadesReabastecimiento },
    { nombre: "reporteVisitasPorDiagnostico", codigo: reporteVisitasPorDiagnostico },
    { nombre: "analizarProductividadMedica", codigo: analizarProductividadMedica },
    { nombre: "reporteVisitasEmergencia", codigo: reporteVisitasEmergencia },
    { nombre: "analizarTiempoEspera", codigo: analizarTiempoEspera },
    { nombre: "reportePacientesCronicos", codigo: reportePacientesCronicos },
    { nombre: "estadisticasTratamientosHospital", codigo: estadisticasTratamientosHospital },
    { nombre: "analizarEfectividadTratamientos", codigo: analizarEfectividadTratamientos },
    { nombre: "reporteTratamientosPorEspecialidad", codigo: reporteTratamientosPorEspecialidad },
    { nombre: "analizarCostosTratamientos", codigo: analizarCostosTratamientos },
    { nombre: "reporteAdherenciaTratamientos", codigo: reporteAdherenciaTratamientos },
    { nombre: "analizarRentabilidadHospital", codigo: analizarRentabilidadHospital },
    { nombre: "reporteFacturacionPorEPS", codigo: reporteFacturacionPorEPS },
    { nombre: "analizarMorosidadPagos", codigo: analizarMorosidadPagos },
    { nombre: "generarDashboardEjecutivo", codigo: generarDashboardEjecutivo },
    { nombre: "reporteCalidadAtencion", codigo: reporteCalidadAtencion },
  ]

  funciones.forEach((funcion) => {
    db.system.js.save({
      _id: funcion.nombre,
      value: funcion.codigo,
    })
    print(`Función ${funcion.nombre} instalada correctamente`)
  })

  print("Todas las funciones UDF han sido instaladas en db.system.js")
  print("Para usar las funciones, ejecute: db.loadServerScripts()")
}

